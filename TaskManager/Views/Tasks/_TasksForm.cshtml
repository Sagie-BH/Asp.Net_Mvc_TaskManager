@model TaskManager.Models.TasksManager


<form asp-controller="Tasks" asp-action="AddNewTask" method="post">
    <div class="row">
        <div class="form-group col-lg-12 col-4">
            <label asp-for="Priority"></label>
            <input asp-for="Priority" type="number" class="form-control" placeholder="Enter Priority..." />
        </div>
        <div class="form-group col-lg-12 col-8">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" placeholder="Enter Title..." />
        </div>
    </div>
    <div class="row">
        <div class="form-group col">
            <label asp-for="StartTime"></label>
            <input asp-for="StartTime" type="datetime-local" class="col-9" />
        </div>
        <div class="form-group col">
            <label asp-for="EndTime"></label>
            <input asp-for="EndTime" type="datetime-local" class="col-9" />
        </div>
    </div>
    <hr />
    <input type="submit" class="btn btn-primary" placeholder="Save" />
</form>
